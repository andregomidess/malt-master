  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "mikro-orm": "mikro-orm --config src/database/config/mikro-orm.config.ts",
    "db:migration:create": "mikro-orm migration:create --config src/database/config/mikro-orm.config.ts",
    "db:migration:up": "mikro-orm migration:up --config src/database/config/mikro-orm.config.ts",
    "db:migration:down": "mikro-orm migration:down --config src/database/config/mikro-orm.config.ts",
    "db:schema:create": "mikro-orm schema:create --config src/database/config/mikro-orm.config.ts",
    "db:schema:update": "mikro-orm schema:update --config src/database/config/mikro-orm.config.ts",
    "db:schema:drop": "mikro-orm schema:drop --config src/database/config/mikro-orm.config.ts"
  },
  "dependencies": {
    "@mikro-orm/core": "6.5.6",
    "@mikro-orm/migrations": "6.5.6",
    "@mikro-orm/nestjs": "6.1.1",
    "@mikro-orm/postgresql": "6.5.6",
    "@mikro-orm/reflection": "6.5.6",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "argon2": "^0.44.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "mikro-orm-soft-delete": "^1.0.0-alpha.1",
    "nodemailer": "^7.0.9",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pug": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-morph": "^27.0.0"
  },
